<Window x:Class="tema3.Views.AdministratorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tema3.Views"
        mc:Ignorable="d"
        Title="Administrator" Height="450" Width="500" WindowStartupLocation="CenterScreen">
    
    <Grid Background="Teal">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Button Command="{Binding EditRooms}" Content="Rooms" Grid.Row="0" FontSize="17" Width="150" Height="40"></Button>
        <Button Command="{Binding EditFacilities}" Content="Facilities" Grid.Row="1" FontSize="17" Width="150" Height="40"></Button>
        <Button Command="{Binding EditServices}" Content="Services" Grid.Row="2" FontSize="17" Width="150" Height="40"></Button>
        <Button Command="{Binding EditOffers}" Content="Offers" Grid.Row="3" FontSize="17" Width="150" Height="40"></Button>
        <Button Command="{Binding EditImages}" Content="Images" Grid.Row="4" FontSize="17" Width="150" Height="40"></Button>

    </Grid>
</Window>
